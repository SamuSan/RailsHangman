<h1 class="game_title">Hang The Man</h1>
<% if alert %>
<div id="alert">
  <%= alert %></div>
<% end %>
<p class="letters_display">
  Guessed letters:
  <%= @game.incorrectly_guessed_letters.join(" ")  %></p>
<p class="letters_display">
  Current Progress:
  <%= letters_filterd_by_guessed(@game, @game.all_guessed_letters).join(" ") %></p>
<label>Number of turns taken: <%= @guesses.size %> are we in progress?? <%= @game.in_progress? %></label> 
<% if @game.in_progress? %>
<%= render 'guess_input' %>
<% end %>
<%= render 'game_display' %>
<% if !@game.in_progress? %>
<%= render 'win_lose_display' %> 
<% end %>   
